                        <img src="" alt="" class="img-responsive img-recent"/>
                    </div>
                    <div class="col-md-3">
                        <img src="" alt="" class="img-responsive img-recent"/>
                    </div>
                    <div class="col-md-3">
                        <img src="" alt="" class="img-responsive img-recent"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-11 col-md-offset-1">
            <div class="containerProfile">
                <div class="borderactus"></div>
                <h5 class="actusTitle">{{ 'Actualités :' | upper }}</h5>
                <div class="row">
                    {% for post in posts|slice(0, 2)  %}
                    <div class="col-md-6">
                        <p class="actualityText dateProfile">{{ post.updatedAt|date('d.m.Y') }}</p>
                        <h5 class="subtitleTextActuality">&quot; {{ post.title }} &quot;</h5>
                        <div class="actualityText">
                            {{ post.text|truncate(50)|raw }}
                        </div>
                        <a class="actualityLien" href="{{ path('post_show', { 'id': post.id }) }}">Voir +</a>
                    </div>
                    {% endfor %}

                </div>
                <div class="borderactus"></div>
            </div>
        </div>
    </div>
</div>

