<div class="container-fluid profile">
    <div class="container">
        <div class="row">
            <div class="col-md-11 col-md-offset-1">
                {# artist    image #}
                <img src="" alt="André Le Corre" class="img-circle img-responsive center-block">
                {# artist name #}
                <h1 class="name text-center"> {{ user.firstname }} {{ user.lastname }}</h1>
                {% if user.blaze != null %}
                    <h2 class="surname text-center">{{ user.blaze }}</h2>
                {% endif %}
                <div class="contactProfile">
                    {# location #}
                    <p class="text-center"><span class="fa fa-map-marker"></span>{{ user.country }}</p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-11 col-md-offset-1">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-4 col-lg-7 col-lg-offset-5 col-sm-8 col-sm-offset-4">
                            {% if user.twitter != null %}
                                <ul class="list-inline social-buttons text-center col-lg-1 col-md-1 col-sm-2 col-xs-4">
                                    <li><a href="{{ user.twitter }}" target="_blank"><span class="fa fa-twitter"></span></a>
                                    </li>
                                </ul>
                            {% endif %}
                            {% if user.facebook != null %}
                                <ul class="list-inline social-buttons text-center col-lg-1 col-md-1 col-sm-2 col-xs-4">
                                    <li><a href="{{ user.facebook }}" target="_blank"><span class="fa fa-facebook"></span></a>
                                    </li>
                                </ul>
                            {% endif %}
                            {% if user.instagram != null %}
                                <ul class="list-inline social-buttons text-center col-lg-1 col-md-1 col-sm-2 col-xs-4">
                                    <li><a href="{{ user.instagram }}" target="_blank"><span class="fa fa-instagram"></span></a>
                                    </li>
                                </ul>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>


<div class="container col-md-11 col-md-offset-1">
    {# Section Biography #}
    <section id="biography" class="containerProfile">

        <h1 class="text-center"><span class="titlestyle">{{ 'Biographie'|upper }}</span></h1>
        <div class="barre center-block"></div>
        <div class="left">
            {{ user.biography|raw }}
        </div>

    </section>
</div>
